{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Process annotated dependencies",
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n.+ (?<currentValue>[v|\\d]\\S+)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}"
    },
    {
      "customType": "regex",
      "description": "Process OCI dependencies",
      "fileMatch": ["\\.yaml$"],
      "matchStrings": ["oci://(?<depName>[^:]+):(?<currentValue>\\S+)"],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Process Talos factory images",
      "fileMatch": ["infrastructure/manifest/20-image/image.yaml"],
      "matchStrings": [
        "image_url: https://factory\\.talos\\.dev/image/(?<schematic>[a-f0-9]+)/(?<currentValue>[\\d\\.]+)/nocloud-amd64\\.raw"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "siderolabs/talos",
      "versioningTemplate": "semver"
    }
  ]
}
