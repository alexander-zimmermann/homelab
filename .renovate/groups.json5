{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Kubernetes components grouping",
      "groupName": "kubernetes",
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "/kube-apiserver/",
        "/kube-controller-manager/",
        "/kube-proxy/",
        "/kube-scheduler/",
        "/kubelet/"
      ],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "minimumGroupSize": 5
    },
    {
      "description": "Talos Linux components grouping",
      "groupName": "talos",
      "matchDatasources": ["docker", "github-releases"],
      "matchPackageNames": ["/talos/", "/installer/", "/talosctl/"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "minimumGroupSize": 2
    },
    {
      "description": "Cilium grouping",
      "groupName": "cilium",
      "matchPackageNames": ["/cilium/"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "minimumGroupSize": 2
    },
    {
      "description": "ArgoCD components grouping",
      "groupName": "argocd",
      "matchPackageNames": ["/argocd/", "/argo-cd/"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "minimumGroupSize": 2
    }
  ]
}
