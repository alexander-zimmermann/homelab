{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "semanticCommitType": "feat"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "digest", "pin", "pinDigest"],
      "semanticCommitType": "chore"
    }
  ]
}
